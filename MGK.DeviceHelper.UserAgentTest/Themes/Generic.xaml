<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MGK.DeviceHelper.UserAgentTest"
	xmlns:MyNamespace="clr-namespace:MGK.DeviceHelper.UserAgentTest.Controls">


	<Style TargetType="{x:Type MyNamespace:MyDataGrid}">
        <Setter Property="Template">
            <Setter.Value>
				<ControlTemplate TargetType="{x:Type MyNamespace:MyDataGrid}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
